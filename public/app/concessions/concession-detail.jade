.container
    .page-header
        h1
            span(ng-bind-html="concession.concession_name|sanitize")
            =' '
            small Concession
    .row
        .col-md-12
            leaflet(center="country.countryMap",controls="controls",markers="country.projectMarkers",tiles="tiles",height='240px')
    .row
        .col-md-6
            .info-box
                h2 Concession Info
                table#concession-info
                    tbody
                        tr
                            td.detail_label ID:
                            td.concession_id {{concession._id}}
                        tr
                            td.detail_label.small Aliases:
                            td.concession_aliases
                                span(ng-repeat='alias in concession.concession_aliases')
                                    span {{alias.alias}}
                                    | {{$last ? '' : ', '}}
                        tr
                            td.detail_label.small Country:
                            td.concession_country: text(ng-repeat="country in concession.concession_country | unique: 'country.country.iso2'")
                                a(href='country/{{country.country.iso2}}')
                                    span(ng-bind-html="country.country.name|sanitize")
                                | {{$last ? '' : ', '}}
                        tr
                            td.detail_label.small Status:
                            td.concession_status: text(
                            ng-repeat="status in concession.concession_status"
                            ng-if="concession.concession_status.length > 0")
                                text(ng-if="$last")
                                    | {{status.string | ucfirst}}
                                    text.small  (true at {{status.timestamp | date:'MM/dd/yyyy @ h:mma' : timezone}})
                        tr
                            td.detail_label.small Commodities:
                            //td {{concession.concession_commodity}}
                            td.concession_commodities
                                text(ng-repeat="commodity in concession.concession_commodity | unique: 'concession._id'")
                                    a(href='commoddity/{{commodity.commodity._id}}')
                                        span(ng-bind-html="commodity.commodity.commodity_name|sanitize")
                                    | {{$last ? '' : ', '}}
                        tr
                            td.detail_label.small Open Oil ID:
                            td.concession_conracts
                                a(href='')
                                    | {{concession.oo_concession_id}}
                            //td.company_open_corporates_id
                            //    a(target="_blank" href='https://opencorporates.com/companies/{{company.open_corporates_id}}') {{company.open_corporates_id}}
                        tr
                            td.detail_label.small Contract:
                            td
                                text(ng-repeat="contract in concession.contracts")
                                    a(href=href="http://www.resourcecontracts.org/contract/{{contract}}")
                                        span(ng-bind-html="contract|sanitize")
                                    | {{$last ? '' : ', '}}

        .col-md-6
            .info-box
                h2
                    | &nbsp;
                table#concession-info
                    tbody
                        tr
                            td.detail_label.our-id Desctiption:
                            td.concession_description
                                span(ng-bind-html="concession.description|sanitize")
    .row
        .col-md-6
            nrgi-project-table(projects="concession.projects")

        .col-md-6
            h2 Companies
                //a=' '
                //small Companies active
            table.table.table-striped.companies(ts-wrapper)
                thead
                    tr
                        th(ts-criteria='name') Name
                        th(ts-criteria='group') Group
                tbody
                    tr(
                    ng-repeat="(id, company) in concession.companies")
                        td
                           a(href="companies/{{id}}")
                              span(ng-bind-html="company.company_name|sanitize")
                        td SUB SUB QUERY
            .download
                span.glyphicon.glyphicon-download(aria-hidden="true")
                span  Download:
                    =' '
                    a(href="") Companies CSV
