h2 Companies
    //a=' '
    //small Companies active
table.table.table-striped.companies(ts-wrapper)#company-info
    thead
        tr
            th(ts-criteria='name') Name
            th(ts-criteria='group') Group
            th(ng-if="stake==true") Stake
    tbody
        tr(
        ng-repeat="company in companies")
            td
                a(href="companies/{{company._id}}")
                    span(ng-bind-html="company.company_name|sanitize")
            td
                text(ng-repeat="group in company.company_groups")
                    a(href='group/{{group._id}}')
                        span(ng-bind-html="group.company_group_name|sanitize")
                    | {{$last ? '' : ', '}}
            td(ng-if="stake==true") UNFINISHED FIELD
