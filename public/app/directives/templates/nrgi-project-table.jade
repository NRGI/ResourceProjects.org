                    a(href='project/{{project.proj_id}}')
                        span(ng-bind-html="project.proj_name|sanitize")
                td.proj_country(ng-if="country==true"): span(ng-repeat="country in project.proj_country | unique: '_id'")
                    a(href='country/{{country.iso2}}')
