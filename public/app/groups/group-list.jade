.container
    .page-header
        .row
            .col-md-4
                h1 Company Groups
                    small
            .col-md-5
            .col-md-3
                a.btn.btn-primary.btn-lg(href='/companies') View Companies

    nrgi-list-nav(
    page="page"
    type="record_type"
    show="show_count"
    count="count"
    limit="limit"
    last="last"
    next="next"
    prev="prev"
    first="first"
    select="select")

    table.table.table-striped(ts-wrapper)
        thead
            tr
                th.tablesort-sortable-th(ts-criteria='company_group_name') Company Group
                th.tablesort-sortable-th(ts-criteria='company_count|parseInt') No. Companies
                th.tablesort-sortable-th(ts-criteria='project_count|parseInt') No. Projects
        tbody
            tr(ng-repeat="group in groups | unique: '_id'",ts-repeat)
                td.company_group_name
                    a(href='group/{{group._id}}') {{group.company_group_name}}
                td.company_group_companies {{group.company_count}}
                td.company_group_projects {{group.project_count}}

    nrgi-list-nav(
    page="page"
    type="record_type"
    show="show_count"
    count="count"
    limit="limit"
    last="last"
    next="next"
    prev="prev"
    first="first"
    select="select")
