.container.top-padding-med
	.card
		.col-xs-12
			legend Commodities
		.clearfix
		.pull-xs-right
			.btn-group
				button.btn.btn-secondary.pull-xs-right(type='button')
					a(href='/admin/create-commodity') Create new commodity
		table.table
			thead
				tr
					th.tablesort-sortable-th Name
					th
			tbody
				tr(ng-repeat="commodity in commodities | unique: '_id'")
					td.commodity_name
						span(ng-bind-html="commodity.commodity_name|sanitize")
					td
						a.btn.center-block.btn-secondary(href="/admin/commodity-admin/{{commodity.commodity_id}}") Edit