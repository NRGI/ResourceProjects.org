.container.top-padding-med
	.card
		.col-xs-12
			legend Countries
			.pull-xs-right
				.btn-group
					button.btn.btn-secondary.pull-xs-right(type='button')
						a(href='/admin/create-group') Create new country
		table.table
			thead
				tr
					th.tablesort-sortable-th Name
					th
			tbody
				tr(ng-repeat="country in countries | unique: '_id'")
					td.country_name
						span(ng-bind-html="country.name|sanitize")
					td
						a.btn.center-block.btn-secondary(href="/admin/country-admin/{{country.iso2}}") Edit