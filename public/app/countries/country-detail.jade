.container
    .page-header
        h1
            span(ng-bind-html="country.name|sanitize")
            =' '
            small Country
    .row
        .col-md-12
            nrgi-leaflet(data='country.location')
    .info-box
        h2 Country Info
        table#country-info
            tbody
                tr
                    td.detail_label.small Commodities:
                    td.country_commodities
                        text(ng-repeat="commodity in country.country_commodity | unique: 'commodity._id'")
                            a(href='commodity/{{commodity.commodity.commodity_id}}')
                                span(ng-bind-html="commodity.commodity.commodity_name|sanitize")
                            | {{$last ? '' : ', '}}
    .row
        .col-md-6
            nrgi-project-table(
            projects="country.projects"
            country="false"
            type="true"
            companies="true"
            commodity="true"
            status="true")
        .col-md-6
            nrgi-site-table(
            sites="country.sites"
            country="true"
            commoditytype="true"
            type="false"
            commodity="true"
            companies="false"
            status="true")
    .row
        .col-md-4
            nrgi-contract-table(
            contracts="country.contracts"
            companies="true"
            commodity="true"
            country="false")
        .col-md-4
            nrgi-company-table(
            companies="country.companies"
            group="true")
        .col-md-4
            nrgi-concession-table(
            concessions="country.concessions"
            country="false"
            commodity="true"
            status="true"
            projects="true")
    .row
        .col-md-12
            nrgi-production-table(
            production="country.production"
            projectlink="true")
    .row
        nrgi-transfer-table(transfers="country.transfers" project="true" projectlink="true")
    .row
        .col-md-12
            nrgi-sources-table(sources="country.sources")
