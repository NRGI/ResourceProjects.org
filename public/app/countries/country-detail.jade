.container
   .page-header
      h1
         span(ng-bind-html="country.name|sanitize")
         =' '
         small Country
   .row
      .col-md-12
         leaflet(center="country.countryMap",controls="controls",markers="country.projectMarkers",tiles="tiles",height='240px')
   .info-box
      h2 Country Info
      table#group-info
         tbody
            tr
               td.project-label(style='width:200px') Commodity Type(s):
               td {{country.commodity_type}}
            tr
               td.project-label(style='width:200px') Commodity:
               td
                  a(href='commodity/{{country.commodity._id}}')
                     span(ng-bind-html="country.commodity.name|sanitize")
   .row
      .col-md-6
         h2 Projects
         table.table.table-striped.projects(ts-wrapper)
            thead
               tr
                  th.tablesort-sortable-th(ts-criteria='name') Name
                  th.tablesort-sortable-th(ts-criteria='commodity') Commodity
                  th.tablesort-sortable-th(ts-criteria='status') Status
                  th.tablesort-sortable-th(ts-criteria='count|parseInt') No. Companies
            tbody
               tr(ng-repeat='project in country.projects',ts-repeat)
                  td
                     a(href='/project/{{project.id}}')
                        span(ng-bind-html="project.name|sanitize")
                  td {{project.commodity}}
                  td {{project.status}}
                  td {{project.count}}
         .download
            span.glyphicon.glyphicon-download(aria-hidden="true")
            span  Download
               =' '
               a(href="/sparql?default-graph-uri=&amp;query=PREFIX+skos%3A+%3Chttp%3A%2F%2Fwww.w3.org%2F2004%2F02%2Fskos%2Fcore%23%3E%0Aprefix+rp%3A+%3Chttp%3A%2F%2Fresourceprojects.org%2Fdef%2F%3E%0A%0ASELECT+DISTINCT+%3Fproject+%3Fname+%28COUNT%28distinct+%3Fcompany%29+as+%3FcompanyCount%29+WHERE+%7B%0A++++%3Fproject+rp%3AhasLocation+%3Chttp%3A%2F%2Fresourceprojects.org%2Fcountry%2FAO%3E+.%0A++++%3Fproject+a+rp%3AProject+.%0A++++%3Fproject+skos%3AprefLabel+%3Fname%0A++++OPTIONAL+%7B%0A+++++++++++++++%3Fproject+rp%3AhasStake+%3Fstake+.%0A+++++++++++++++%3Fstake+rp%3AhasStakeholder+%3Fcompany+.%0A+++++++++++++++%3Fcompany+a+rp%3ACompany+%0A++++%7D%0A%7D+%0AORDER+BY+%28%3Fname%29%0A%0A%0A&amp;format=text%2Fcsv&amp;timeout=0&amp;debug=on") Projects CSV
      .col-md-6
         h2 Companies
            a=' '
            small Companies active in this country
         table.table.table-striped.companies(ts-wrapper)
            thead
               tr
                  th.tablesort-sortable-th(ts-criteria='name') Name
                  th.tablesort-sortable-th(ts-criteria='group') Group
            tbody
               tr(ng-repeat="company in country.companies",ts-repeat)
                  td
                     a(href="company/{{company.idCompany}}")
                        span(ng-bind-html="company.name|sanitize")
                  td
                     a(href="group/{{company.idGroup}}")
                        span(ng-bind-html="company.group|sanitize")
         .download
            span.glyphicon.glyphicon-download(aria-hidden="true")
            span  Download
