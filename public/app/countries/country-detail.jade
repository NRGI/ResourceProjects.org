   h2 Payments
   table.table.table-striped.payments(ts-wrapper)
      thead
         tr
            th.tablesort-sortable-th(ts-criteria='year') Year
            th.tablesort-sortable-th(ts-criteria='project') Project
            th.tablesort-sortable-th(ts-criteria='paidBy') Paid by
            th.tablesort-sortable-th.type(ts-criteria='type') Payment Type
            th.tablesort-sortable-th(ts-criteria='currency') Currency
            th.tablesort-sortable-th(ts-criteria='value|parseInt') Value
            th.tablesort-sortable-th(ts-criteria='receipt') Payment or receipt?
      tbody
         tr(ng-repeat="payment in country.payments",ts-repeat)
            td {{payment.year}}
            td
               a(href="project/{{payment.projectId}}")
                  span(ng-bind-html="payment.project|sanitize")
            td
               a(href="company/{{payment.paidById}}")
                  span(ng-bind-html="payment.paidBy|sanitize")
            td {{payment.type}}
