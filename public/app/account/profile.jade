.container
    .card
        form.form-horizontal(name='profileForm')
            fieldset
                //- Profile page
                .col-xs-12
                    legend {{full_name}}'s Profile
                .form-group.row
                    .col-xs-12
                        label.col-sm-2.form-control-label(for="first_name") First Name
                        .col-sm-10
                            input.form-control(
                            id="first_name"
                            name="first_name"
                            type="text"
                            placeholder="First Name"
                            ng-model="first_name"
                            required)
                .form-group.row
                    .col-xs-12
                        label.col-md-2.form-control-label(for="last_name") Last Name
                        .col-md-10
                            input.form-control(
                            id="last_name"
                            name="last_name"
                            type="text"
                            placeholder="Last Name"
                            ng-model="last_name"
                            required)
                .form-group.row
                    .col-xs-12
                        label.col-md-2.form-control-label(for="username") Username
                        .col-md-10
                            input.form-control(
                            id="username"
                            name="username"
                            type="text"
                            placeholder="Username"
                            ng-model="username"
                            readonly)
                .form-group.row
                    .col-xs-12
                        label.col-md-2.form-control-label(for="email") Email
                        .col-md-10
                            input.form-control(
                            id="email"
                            name="email"
                            type="email"
                            placeholder="Email"
                            ng-model="email"
                            required)
                .form-group.row
                    .col-xs-12
                        label.col-md-2.form-control-label(for="roles") Roles
                        .col-md-10
                            input.form-control(
                            id="roles"
                            name="roles"
                            type="text"
                            placeholder="Roles"
                            ng-model="roles"
                            readonly)
                //- .form-group
                //- 	label.col-md-2.control-label(form="address") Address
                //- 	.col-md-10
                //- 		input.form-control(name="address", type="text", placeholder="Address", ng-model="address", required)
                //- .form-group
                //- 	label.col-md-2.control-label(form="language") Language
                //- 	.col-md-10
                //- 		input.form-control(name="language", type="text", placeholder="Language", ng-model="language", required)
                .form-group.row
                    .col-xs-12
                        label.col-md-2.form-control-label(for="password") Password
                        .col-md-10
                            input.form-control(
                            id="password"
                            name="password"
                            type="password"
                            placeholder="Password"
                            ng-model="password")
                .form-group.row
                    .col-xs-12
                        .col-md-10.col-md-offset-2
                            .pull-xs-right
                                button.btn.btn-primary(
                                ng-click="update()"
                                ng-disabled="profileForm.$invalid") Submit
                                | &nbsp;
                                a.btn.btn-secondary(href="/") Cancel