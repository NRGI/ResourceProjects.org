.navbar-right(ng-controller="nrgiNavBarLoginCtrl")
    //- LOGIN NAVBAR
    form.navbar-form.right-padding-lg(ng-hide="identity.isAuthenticated()")
        .form-group.row
            .col-xs-12
                input.form-control(
                placeholder="Username"
                ng-model="username")
        .form-group.row
            .col-xs-12
                input.form-control(
                type="password"
                placeholder="Password"
                ng-model="password")
        button.btn.btn-primary(ng-click="signin(username, password)")
            span.glyphicon.glyphicon-log-in(title="Login")  Login
        //- TODO add forgot password functionality
        button.btn.btn-warning(
        ng-click=""
        disabled) Forgot Password

    //- AUTHENTICATED NAVBAR
    ul.nav.navbar-nav.navbar-right.right-padding-lg(ng-show="identity.isAuthenticated()")

        //- REGULAR USER
        ul.nav.navbar-nav(ng-hide="identity.currentUser.isSupervisor()")
        //- ADMIN USER
        ul.nav.navbar-nav.dropdown
            li.dropdown(ng-show="identity.currentUser.isSupervisor()")
                a.dropdown-toggle(data-toggle="dropdown") Administration
                    b.caret
                ul.dropdown-menu
                    li
                        a(href="/admin/create-user") Create User
                    li
                        a(href="/admin/user-admin") User Admin

        //- PROFILE
        ul.nav.navbar-nav
            li
                a(href="/profile", title="Profile") {{identity.currentUser.first_name + " " + identity.currentUser.last_name}}

        //- LOGOUT
        ul.nav.navbar-nav
            li
                a.glyphicon.glyphicon-log-out(
                href=""
                ng-click="signout()"
                title="Logout")