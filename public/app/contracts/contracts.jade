.container
    .page-header
        h1 Contracts
            small
    table.table.table-striped(about='http://resourceprojects.org/contracts',ts-wrapper)
        thead
            tr
                th.tablesort-sortable-th(ts-criteria='contract_id') Contract
                th.tablesort-sortable-th(ts-criteria='projects.length|parseInt') No. Projects
        tbody
            tr(ng-repeat="contract in contracts",ts-repeat)
                td
                    a(href='contract/{{ contract._id }}') {{contract.contract_id}}
                        //span(ng-bind-html="country.id | sanitize")
                td {{contract.projects.length}}
                td