.container
    .page-header
        h1
            span(ng-bind-html="contract.rc_info.contract_name|sanitize")
            =' '
            small Contract
    .row
        .col-md-12
            leaflet(center="center",controls="controls",markers="contract.location",tiles="tiles",height='240px')
    .row
        .col-md-6
            .info-box
                h2 Contract Info
                table#contract-info
                    tbody
                        tr
                            td.detail_label.small Resource Contracts ID:
                            td.contract_id {{contract.contract_id}}
                        tr
                            td.detail_label.small Commodities:
                            td.commodities: text(ng-repeat="commodity in contract.commodity | unique: '_id'")
                                nrgi-commodity-rout(id='commodity._id' commodity='commodity.commodity_id' name='commodity.commodity_name' )
                                | {{$last ? '' : ', '}}
                        tr
                            td.detail_label.small Concessions:
                            td.concessions: text(ng-repeat="concession in contract.concessions | unique: '_id'")
                                a(href='concession/{{concession._id}}')
                                    span(ng-bind-html="concession.concession_name|sanitize")
                                | {{$last ? '' : ', '}}
        .col-md-6
            nrgi-company-table(
            companies="contract.companies"
            stake='true'
            group='true')
    .row
        .col-md-12
            nrgi-project-table(
            projects="contract.projects"
            country="true"
            commodity="true"
            status="true"
            type="true"
            companies="false")

    .row
        .col-md-12
            nrgi-sources-table(sources="contract.sources")