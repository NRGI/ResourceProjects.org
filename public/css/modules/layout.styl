@import "../variables"

$footer-padding = 15px

body
  padding-top 61px
  font-size 14px!important

footer
  margin-top 40px
  padding-top 20px
  /* border-top 4px solid rgb(215, 219, 223); */
  border-top 8px solid #D6D8CB
  background #EEEFE8
  color #333
  min-height 200px; a
  color #494641

.navbar-header a.navbar-brand
  padding-top 30px
  margin-top -15px
  margin-bottom -20px
  h6
    color #ccc

.navbar-form
  .form-group
    margin-left 10px
  button
    margin-left 10px

.page-container
  padding-top $padding-regular
  min-width 500px

.page-well
  margin $margin-regular 70px $margin-regular $padding-large

.card
  min-height 20px
  padding 19px
  margin-bottom 20px
  background-color #f5f5f5!important
  border 1px solid #e3e3e3
  border-radius 4px
  -webkit-box-shadow inset 0 1px 1px rgba(0,0,0,.05)
  box-shadow inset 0 1px 1px rgba(0,0,0,.05)